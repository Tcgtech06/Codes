{
  "info": {
    "name": "KnitInfo API",
    "description": "API collection for KnitInfo Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"KnitInfo2024@Admin\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "    console.log('Token saved:', response.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{token}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "verify"]
            }
          }
        }
      ]
    },
    {
      "name": "Companies",
      "item": [
        {
          "name": "Get All Companies",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/companies",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "companies"]
            }
          }
        },
        {
          "name": "Create Company",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"companyName\": \"Test Company\",\n  \"contactPerson\": \"John Doe\",\n  \"email\": \"john@testcompany.com\",\n  \"phone\": \"+91 9876543210\",\n  \"website\": \"https://testcompany.com\",\n  \"address\": \"123 Test Street, Test City\",\n  \"category\": \"Yarn\",\n  \"description\": \"A test company for yarn manufacturing\",\n  \"products\": [\"Cotton Yarn\", \"Polyester Yarn\"],\n  \"certifications\": \"ISO 9001\",\n  \"gstNumber\": \"22AAAAA0000A1Z5\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/companies",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "companies"]
            }
          }
        },
        {
          "name": "Search Companies",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/companies/search?q=yarn&category=Yarn",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "companies", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "yarn"
                },
                {
                  "key": "category",
                  "value": "Yarn"
                }
              ]
            }
          }
        },
        {
          "name": "Get Companies by Category",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/companies/category/Yarn",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "companies", "category", "Yarn"]
            }
          }
        }
      ]
    },
    {
      "name": "Priorities",
      "item": [
        {
          "name": "Get Priorities",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/priorities",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "priorities"]
            }
          }
        },
        {
          "name": "Create Priority",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"companyId\": \"1\",\n  \"companyName\": \"ABC Textiles Ltd\",\n  \"category\": \"Yarn\",\n  \"position\": 1,\n  \"priorityType\": \"permanent\",\n  \"createdBy\": \"admin\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/priorities",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "priorities"]
            }
          }
        }
      ]
    },
    {
      "name": "Form Submissions",
      "item": [
        {
          "name": "Create Submission",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"add-data\",\n  \"formData\": {\n    \"companyName\": \"New Company\",\n    \"contactPerson\": \"Jane Smith\",\n    \"email\": \"jane@newcompany.com\",\n    \"phone\": \"+91 9876543211\",\n    \"category\": \"Fabric Suppliers\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/submissions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "submissions"]
            }
          }
        },
        {
          "name": "Get Submissions (Protected)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/submissions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "submissions"]
            }
          }
        }
      ]
    },
    {
      "name": "Contact",
      "item": [
        {
          "name": "Submit Contact",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"user@test.com\",\n  \"message\": \"This is a test contact message\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/contact",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "contact"]
            }
          }
        }
      ]
    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "Get Categories",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/categories",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "categories"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    }
  ]
}